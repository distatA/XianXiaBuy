.goods_list .goods_leftPart {
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goods_list .goods_item {
  display: flex;
}
.goods_list .goods_item .goods_rightPart {
  flex: 1;
  position: relative;
}
.goods_list .goods_item .goods_rightPart .goods_count {
  width: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 15rpx;
  right: 50rpx;
}
.goods_list .goods_item .goods_rightPart .goods_count .iconfont {
  font-size: 45rpx;
}
.goods_list .goods_item .goods_rightPart .goods_count .goods_num {
  min-width: 40rpx;
  display: flex;
  justify-content: center;
}
.empty {
  height: 100vh;
  width: 750rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  z-index: -1;
}
.empty.show {
  opacity: 1;
  z-index: 1;
}
.empty_box {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty_images {
  width: 658rpx;
  height: 444rpx;
}
.empty_tips {
  color: #d0d0d0;
  font-size: 45rpx;
}
.operationBar {
  border-top: 1px solid #eee;
  width: 750rpx;
  height: 82rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.operationBar_left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.operationBar_select {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 175rpx;
}
.operationBar_select_all {
  color: grey;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.operationBar_total {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 250rpx;
}
.operationBar_total_price {
  flex: 1;
  color: var(--themeColor);
}
