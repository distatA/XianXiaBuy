page {
  background-color: #f9f9f9;
}
.location {
  width: 715rpx;
  height: 187rpx;
  background-color: #fff;
  margin: 20rpx 0;
  padding: 0 18rpx ;
}
.location_title {
  height: 85rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
  margin: 20rpx 0;
}
.location_userInfo {
  margin-top: 20rpx;
  height: 40rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #434343;
}
.location_userInfo_name {
  width: 100rpx;
}
.location_userInfo_telephone {
  flex: 1;
}
.detailInfo {
  margin: 20rpx 10rpx;
  background-color: #fff;
}
.detailInfo .address {
  padding: 0 20rpx;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  width: 750rpx;
  height: 170rpx;
}
.detailInfo .address_top {
  border-bottom: 1px solid #eee;
  height: 80rpx;
  width: 720rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detailInfo .address_top_pickupAddress {
  width: 120rpx;
  color: var(--littleFontColor);
  font-size: 25rpx;
}
.detailInfo .address_top_rightPart {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detailInfo .address_top_rightPart .iconjinru {
  color: var(--littleFontColor);
  font-size: 28rpx;
}
.detailInfo .address_body {
  width: 100%;
  height: 70rpx ;
  display: flex;
  align-items: center;
}
.detailInfo .address_body .icondizhi {
  color: var(--themeColor);
  margin-right: 10rpx;
}
.detailInfo .address_body_font {
  color: var(--littleFontColor);
  font-size: 25rpx;
}
.detailInfo .pickup {
  padding: 0 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  position: relative;
}
.detailInfo .pickup_person {
  min-width: 80rpx;
  text-align: right;
}
.detailInfo .pickup_input {
  flex: 1;
  margin-left: 20rpx;
}
.detailInfo .pickup .verificationcode {
  background-color: var(--themeColor);
  width: 230rpx;
  height: 70rpx;
  font-size: 25rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 20rpx;
  right: 0;
}
.detailInfo .product {
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.detailInfo .product_top {
  height: 100rpx;
  color: var(--littleFontColor);
  display: flex;
  align-items: center;
}
.detailInfo .product_content {
  position: relative;
}
.detailInfo .product_number {
  color: var(--littleFontColor);
  position: absolute;
  bottom: 13rpx;
  right: 24rpx;
}
.payDetail {
  padding: 0 15rpx;
  width: 720rpx;
  height: 328rpx;
  background: #fff;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
}
.payDetail_title {
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.payDetail_detail {
  display: flex;
  height: 70rpx;
  align-items: center;
  justify-content: space-between;
}
.payDetail_detail_left,
.payDetail_detail_right {
  color: grey;
  font-size: 28rpx;
}
.payBottom {
  margin-top: 30rpx;
  width: 100%;
  background-color: #fff;
  height: inherit;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.payBottom_left {
  margin-left: 15rpx;
  display: flex;
  width: 300rpx;
  align-items: center;
}
.payBottom_left_Price {
  color: var(--themeColor);
  min-width: 100rpx;
}
.payBottom_left_Price::before {
  content: 'Â¥';
  color: currentColor;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.payBottom_right {
  margin-right: 15rpx;
  background-color: var(--themeColor);
  color: white;
  width: 150rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  font-size: 25rpx;
}
.payBottom .disabled {
  color: white;
  background-color: #b6b6b6;
}
